<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EmployeeDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorText">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/employeeImageView"
            android:src="@drawable/user"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:id="@+id/assetNameTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:textColor="@color/colorForeign"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sendAssetTextView"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="252dp"
                android:layout_marginEnd="20dp"
                android:text="Send Asset"
                android:textColor="@color/colorBgLight"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/assetNameTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="36dp"
                android:layout_marginRight="205dp"
                android:text="davisdavy96@gmail.com"
                android:textColor="@color/colorBgLight"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp">
                <!--         List        -->

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mainList"
                    android:layout_gravity="center_horizontal|top"/>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</FrameLayout>